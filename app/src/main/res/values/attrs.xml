<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!--自定义控件01 自定义属性-->
    <attr name="mText" format="string"></attr>
    <attr name="textColor" format="color"></attr>

    <declare-styleable name="CustomView01">
        <attr name="mText"></attr>
        <attr name="textColor"></attr>
    </declare-styleable>
    <!--自定义控件01 自定义属性-->

    <!--自定义控件02-->
    <attr name="image" format="reference"></attr>
    <attr name="imageScaleType">
        <enum name="fillXY" value="0" />
        <enum name="center" value="1" />
    </attr>

    <declare-styleable name="CustomView02">
        <attr name="mText"></attr>
        <attr name="textColor"></attr>
        <attr name="image"></attr>
        <attr name="imageScaleType"></attr>
    </declare-styleable>

    <!--自定义控件03-->
    <attr name="circleWidth" format="dimension"></attr>
    <attr name="speed" format="integer"></attr>

    <declare-styleable name="CustomView03">
        <attr name="circleWidth"></attr>
        <attr name="speed"></attr>
    </declare-styleable>

    <!--自定义控件04-->
    <attr name="firstColor" format="color" />
    <attr name="secondColor" format="color" />
    <attr name="dotCount" format="integer" />
    <attr name="splitSize" format="integer" />
    <attr name="bg" format="reference"></attr>

    <declare-styleable name="CustomView04">
        <attr name="firstColor" />
        <attr name="secondColor" />
        <attr name="circleWidth" />
        <attr name="dotCount" />
        <attr name="splitSize" />
        <attr name="bg" />
    </declare-styleable>

    <!--自定义控件07-->
    <attr name="mTitle" format="string"></attr>
    <attr name="mLeftText" format="string"></attr>
    <attr name="mRightText" format="string"></attr>
    <attr name="mTitleColor" format="color"></attr>
    <attr name="mLeftTextColor" format="color"></attr>
    <attr name="mRightTextColor" format="color"></attr>
    <attr name="mLeftBackground" format="reference|color"></attr>
    <attr name="mRightBackgroud" format="reference|color"></attr>
    
    <declare-styleable name="CustomView07">
        <attr name="mTitle"></attr>
        <attr name="mLeftText"></attr>
        <attr name="mRightText"></attr>
        <attr name="mTitleColor"></attr>
        <attr name="mLeftTextColor"></attr>
        <attr name="mRightTextColor"></attr>
        <attr name="mLeftBackground"></attr>
        <attr name="mRightBackgroud"></attr>
    </declare-styleable>
    



</resources>